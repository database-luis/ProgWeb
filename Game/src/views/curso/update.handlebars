<h1>Atualização de Curso</h1>
<form action="/curso/update/{{curso.id}}" method="post">
    <div class="container">
        <div class="col-6">
            <div class="form-group">
                <label for="sigla" class="form-label mt-4">Código do Curso</label>
                <input type="text" class="form-control" id="sigla" name="sigla" aria-describedby="siglaHelp"
                    placeholder="Insira o Código do Curso" value="{{curso.sigla}}">
            </div>

            <div class="form-group">
                <label for="nome" class="form-label mt-4">Nome do Curso</label>
                <input type="text" class="form-control" id="nome" name="nome" aria-describedby="nomeHelp"
                    placeholder="Insira o Nome do Curso" value="{{curso.nome}}">
            </div>

            <div class="form-group">
                <label for="descricao" name="descricao" class="form-label mt-4">Adicione uma Descrição</label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3"
                    placeholder="Descreva o Curso">{{curso.descricao}}</textarea>
            </div>

            <fieldset class="form-group">
                <legend class="mt-4">Selecione a Área</legend>
                <div class="form-check">
                    {{#equal curso.areaId 1}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId1" value="1" checked>
                    {{else}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId1" value="1">
                    {{/equal}}
                    <label class="form-check-label" for="areaId1">
                        Ciências Exatas
                    </label>
                </div>

                <div class="form-check">
                    {{#equal curso.areaId 2}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId2" value="2" checked>
                    {{else}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId2" value="2">
                    {{/equal}}
                    <label class="form-check-label" for="areaId2">
                        Ciências Humanas
                    </label>
                </div>

                <div class="form-check">
                    {{#equal curso.areaId 3}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId3" value="3" checked>
                    {{else}}
                    <input class="form-check-input" type="radio" name="areaId" id="areaId3" value="3">
                    {{/equal}}
                    <label class="form-check-label" for="areaId3">
                        Ciências Exatas
                    </label>
                </div>

            </fieldset>
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary mt-4">Atualizar Curso</button>
</form>