<h1>Formulário de Criação de Curso</h1>
<form action="/curso/create" method="post">
    <div class="container">
        <div class="col-6">
            <div class="form-group">
                <label for="sigla" class="form-label mt-4">Código do Curso</label>
                <input type="text" class="form-control" id="sigla" name="sigla" aria-describedby="siglaHelp"
                    placeholder="Insira o Código do Curso">
                <small id="siglaHelp" class="form-text text-muted">
                    Campo para o Código do Curso
                </small>
            </div>

            <div class="form-group">
                <label for="nome" class="form-label mt-4">Nome do Curso</label>
                <input type="text" class="form-control" id="nome" name="nome" aria-describedby="nomeHelp"
                    placeholder="Insira o Nome do Curso">
                <small id="nomeHelp" class="form-text text-muted">
                    Campo para o Nome do Curso
                </small>
            </div>

            <div class="form-group">
                <label for="descricao" name="descricao" class="form-label mt-4">Adicione uma Descrição</label>
                <textarea class="form-control" id="descricao" name="descricao" rows="3" placeholder="Descreva o Curso"></textarea>
            </div>

            <fieldset class="form-group">
                <legend class="mt-4">Selecione a Área</legend>
                <div class="form-check">
                    <input 
                        class="form-check-input" 
                        type="radio" 
                        name="areaId" 
                        id="areaId1"
                        value="1" 
                        checked="">
                    <label class="form-check-label" for="areaId1">
                        Ciências Exatas
                    </label>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="areaId" id="areaId2"
                        value="2">
                    <label class="form-check-label" for="areaId2">
                        Ciências Humanas
                    </label>
                </div>
                 <div class="form-check">
                    <input class="form-check-input" type="radio" name="areaId" id="areaId3"
                        value="3">
                    <label class="form-check-label" for="areaId3">
                        Ciências Exatas
                    </label>
                </div>
            </fieldset>

        </div>

        <button type="submit" class="btn btn-outline-primary mt-4">Adicionar Curso</button>

    </div>
</form>