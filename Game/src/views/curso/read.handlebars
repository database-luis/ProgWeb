<div class="col-8">
    <div class="card border-success mb-3" style="max-width: 30rem;">
        <div class="card-header card-cursos">
            <div class="nome">{{curso.nome}}</div>
            <div class="opcoes">
                <a href="http://" data-toggle="modal" data-target="#exampleModal">
                    <i class="fa-solid fa-trash" style="color: #f3770c;"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <p class="card-title">Sigla: {{curso.sigla}}</p>
            <p class="card-text">Descrição: {{curso.descricao}}</p>
            <p class="card-text">Área: {{curso.Area.nome}}</p>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="botao-delecao" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    const botaoDelecao = document.getElementById("botao-delecao")
    botaoDelecao.onclick = function(){
        apagarCurso({{curso.id}})
    }
</script>